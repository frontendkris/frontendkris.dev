---
import { Icon } from "astro-icon/components";
import ImageReveal from "./partials/ImageReveal.astro";
import SocialMedia from "./SocialMedia.astro";
import { iconClass } from "./SocialMedia.astro";
import chosenImage from "src/assets/gif/chosen.webp";
---

<div class="flex flex-col items-center gap-6 text-gray-300 text-center">
  <div
    class="flex justify-between md:justify-center md:gap-x-12 gap-y-4 w-full"
  >
    <div class="flex items-center gap-1">
      <Icon name="mdi:backpack" class={`${iconClass} hover:text-gray-300`} /> Available
    </div>
    <SocialMedia />
  </div>
  <ImageReveal
    image={chosenImage}
    direction="bottom"
    className="text-supernova-500"
  >
    I create things that make users smile,<br />
    making them think about you, coming back, and choosing you.
  </ImageReveal>
</div>
